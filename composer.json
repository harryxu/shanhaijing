{
    "name": "bigecko/shanhaijing",
    "description": "Yet another php forum.",
    "keywords": ["forum", "bbs"],
    "license": "MIT",
    "require": {
        "laravel/framework": "4.0.*",
        "cartalyst/sentry": "2.0.*",
        "dflydev/markdown": "dev-master",
        "ezyang/htmlpurifier": "4.*"
    },
    "autoload": {
        "classmap": [
            "app/commands",
            "app/controllers",
            "app/models",
            "app/database/migrations",
            "app/database/seeds",
            "app/tests/TestCase.php"
        ],
        "files": [
            "app/src/Shanhaijing/Support/helpers.php"
        ],
        "psr-0": {
            "Shanhaijing": "app/src"
        }
    },
    "scripts": {
        "pre-update-cmd": [
            "php artisan clear-compiled"
        ],
        "post-install-cmd": [
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "php artisan optimize"
        ]
    },
    "config": {
        "preferred-install": "dist"
    },
    "minimum-stability": "dev"
}
